{
  "name": "ngss-mcp",
  "version": "1.2.1",
  "description": "MCP server with 8 tools for NGSS standards: complete 3D framework filtering (SEP, CCC, DCI) and intelligent unit planning. Supports Smithery.ai deployment.",
  "main": "dist/server/index.js",
  "module": "./dist/index.js",
  "bin": {
    "ngss-mcp": "dist/server/index.js"
  },
  "files": [
    "dist/",
    "data/",
    "smithery.yaml",
    "LICENSE",
    "README.md"
  ],
  "directories": {
    "doc": "docs"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "build-data": "bun scripts/build-data.ts",
    "test": "bun scripts/test-pdf-extraction.ts",
    "validate:data-quality": "bun scripts/validate-data-quality.ts",
    "fix:ocr-errors": "bun scripts/fix-ocr-errors.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ngss",
    "education",
    "standards",
    "science",
    "teachflow",
    "3d-framework",
    "token-efficient"
  ],
  "author": "Sallvain",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sallvainian/NGSS-MCP.git"
  },
  "homepage": "https://github.com/Sallvainian/NGSS-MCP#readme",
  "bugs": {
    "url": "https://github.com/Sallvainian/NGSS-MCP/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "fast-levenshtein": "^3.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fast-levenshtein": "^0.0.4",
    "@types/node": "^24.7.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
